<div class="container">
  <div class="banner-show" style="background-image: url('<%= @cocktail.image.url() %>')"></div>
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %></p>
    <p><%= dose.ingredient.name %></p>
  <% end %>
  <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to "Return at list", cocktails_path, class: "btn btn-primary" %>
</div>

