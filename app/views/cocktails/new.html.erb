<div class="container">
<h1>New Cocktail</h1>
<%= simple_form_for (@cocktail), html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.file_field :image, :label => "Upload an image" %>
  <%= f.button :submit %>
<% end %>
<%= link_to "Return at list", cocktails_path, class: "btn btn-primary" %>

</div>
