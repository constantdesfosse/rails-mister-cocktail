<div class="container">
<div class="row">
<div class="col-sm6">
<h1> COCKTAIL SHAKER </h1>
</div>
</div>
<div class="row">
<div class="col-sm6">



  <% @cocktails.each do |r| %>
    <div class="card">
    <%= link_to cocktail_path(r), method: :delete do %>
    <i class="fa fa-times" aria-hidden="true"></i>
    <%end%>
    <div class="banner-card" style="background-image: url('<%= image_path r.photo, height: 300, width: 400, crop: :fill %>')">
    <div class="header-card">
    <h3><%= link_to r.name.upcase, cocktail_path(r) %></h3>
    </div>
    </div>
    </div>
  <% end %>

</div>
</div>
<%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
